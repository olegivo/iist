<UserControl
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:uiIndicators="clr-namespace:UICommon.WPF.UIIndicators;assembly=UICommon.WPF"
             x:Class="TP.WPF.Resources.ucIndicatorGroupFurnance" 
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="360">
	<WrapPanel Orientation="Vertical">
		<uiIndicators:ucLevelIndicator Height="150" Width="180" DataContext="{Binding IndicatorViewModels[1]}"/>
        <uiIndicators:ucLevelIndicator Height="150" Width="180" DataContext="{Binding IndicatorViewModels[2]}"/>
        <uiIndicators:ucLevelIndicator Height="150" Width="180" DataContext="{Binding IndicatorViewModels[3]}"/>
        <uiIndicators:ucLevelIndicator Height="150" Width="180" DataContext="{Binding IndicatorViewModels[4]}"/>
	</WrapPanel>
</UserControl>
