<Window
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	mc:Ignorable="d"
	x:Class="UICommonWPF.MainWindow"
	x:Name="Window" Width="1024" Height="768" Title="Контроль и управление технологическим процессом" Icon="dickiedadevil128x128.ico">
	<Window.Resources>
		<Storyboard x:Key="OnLoaded1">
			<DoubleAnimationUsingKeyFrames Storyboard.TargetProperty="(UIElement.Opacity)" Storyboard.TargetName="ucReheatChamber">
				<SplineDoubleKeyFrame KeyTime="0" Value="0"/>
				<SplineDoubleKeyFrame KeyTime="0:0:5" Value="1"/>
			</DoubleAnimationUsingKeyFrames>
		</Storyboard>
	</Window.Resources>


	<Grid x:Name="LayoutRoot">
		<!--<UIComponents:ucReheatChamber x:Name="ucReheatChamber" Height="Auto" Width="Auto"/>-->
        <TextBox Text="All the useless components were deleted!"></TextBox>
	</Grid>
</Window>