<UserControl
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
    xmlns:dg="clr-namespace:Microsoft.Windows.Controls;assembly=WPFToolkit"
	xmlns:amq="clr-namespace:AmCharts.Windows.QuickCharts;assembly=AmCharts.Windows.QuickCharts" mc:Ignorable="d"
	x:Class="TP.WPF.Views.ucChartTab"
	x:Name="UserControl"
	d:DesignWidth="640" d:DesignHeight="480" Width="1024" Height="768">
    <Grid>
        <amq:SerialChart x:Name="Chart1"
                         DataSource="{Binding ChartBindingData}" 
                         CategoryValueMemberPath="ChannelTime" 
                         Background="Transparent"
                         BorderThickness="1"
                         AxisForeground="BurlyWood"
                         ValueFormatString="0.00"
                         >
            <amq:SerialChart.Graphs>
                <amq:LineGraph ValueMemberPath="ChannelValue" Title="ChannelId" />
               <!-- <amq:ColumnGraph ValueMemberPath="val2" Title="Column #1" ColumnWidthAllocation="0.2" />
                <amq:AreaGraph ValueMemberPath="val3" Title="Area #1" />-->
            </amq:SerialChart.Graphs>
        </amq:SerialChart>
    </Grid>
</UserControl>
