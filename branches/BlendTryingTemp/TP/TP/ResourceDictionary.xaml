						<Canvas Height="18" Width="138">
							<Path Data="M240,320 L240,336 320,336 320,320 z" Fill="{DynamicResource BrushDarkRed}" Height="18" Stretch="Fill" Stroke="{DynamicResource BrushBlack}" StrokeThickness="2" Width="72"/>
